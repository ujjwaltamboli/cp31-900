#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){

        int n,k;
        cin>>n>>k;
        vector<int> store(n*k,0);
        for (int i=0;i<n*k;i++){
            cin>>store[i];
        }
        int d;
        if (n%2!=0){
            d=ceil(n/2.0);
        }
        else{
            d=n/2+1;
        }
        int j=n*k-d;
        long long int sum=0;
        int count=k;
        while (count--){
            sum=sum+store[j];
            j=j-d;
        }
        cout<<sum<<endl;
    }

    //T.C..:- O(n*k)
    //S.C.:- O(n*k)

    return 0;
}
