#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        int n,k;
        cin>>n>>k;
        vector<int> store(n,0);
        for (int i=0;i<n;i++){
            cin>>store[i];
        }
        sort(store.begin(), store.end());//O(nlogn)
        int count=1;
        int maxi=1;
        for (int i=1;i<n;i++){// O(n);
            if (store[i]-store[i-1]<=k){
                count++;
            }
            else{
                count=1;
            }
            maxi=max(maxi,count);
        }
        cout<<n-maxi<<endl;

        //T.C.:- O(nlogn);
        //S.C.: O(n);
    }
    return 0;
}
