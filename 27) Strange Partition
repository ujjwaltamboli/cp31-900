#include <iostream>
#include <math.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        int n;double x;
        cin>>n>>x;
        long long int sum=0;
        long long int sum2=0;
        while (n--){
            int a;
            cin>>a;
            sum=sum+a;
            sum2=sum2+(long long)ceil(a/x);    
        }
        cout<<(long long)ceil(sum/x)<<" "<<sum2<<endl;

        //T.C.:- O(n)
        //S.C.:- O(1);
    }
    return 0;
}
