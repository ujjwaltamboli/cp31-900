#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        int n;
        cin>>n;
        vector<int> store(n+1,0);
        int gcd=0;
        for (int i=1;i<n+1;i++){
            cin>>store[i];
            if (store[i]!=i){
                gcd=__gcd(gcd, abs(store[i]-i));
            }
        }
        cout<<gcd<<endl;
        // T.C.:-O(n)
        // S.C.:-O(n)
    }
    return 0;
}
