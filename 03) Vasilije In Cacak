#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while(t--){
        long long n,k,x;
        cin>>n>>k>>x;
        long long mini=k*(k+1)/2;
        long long maxi=n*(n+1)/2-((n-k)*(n-k+1)/2);
        if (x>=mini && x<=maxi){
            cout<<"Yes"<<endl;
        }
        else{
            cout<<"No"<<endl;
        }

        //T.C.:-O(1);
        //S.C.:- O(1);
    }
    return 0;
}
