#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--){
        int n;
        cin>>n;
        vector<int> store(n,0);
        for (int i=0;i<n;i++){
            cin>>store[i];
        }

        int i=0;
        int count=0;
        while (i<n){
            while (i<n && store[i]==0){
                i++;
            }
            if (i==n){
                break;
            }
            while (i<n && store[i]!=0){
                i++;
            }
            count++;
        }
        if (count==1){
            cout<<1<<endl;
        }
        else if (count==0){
            cout<<0<<endl;
        }
        else{
            cout<<2<<endl;
        }
        //T.C:- O(n);
        //S.C.:- O(n);
    }
    return 0;
}
