#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n;
        cin>>n;
        vector<long long> store(n,0);

        for (long long i=0;i<n;i++){
            cin>>store[i];
        }

        if (n==1){
            cout<<0<<endl;
            continue;
        }
        long long op=0;
        bool flag=true;
        //n=2;
        for (long long i=n-2;i>=0;i--){//O(n)
            while (store[i]!=0 && store[i]>=store[i+1]){//O(30)
                store[i]=store[i]/2;
                op++;
            }
            if (i==0 && store[i+1]==0){
                flag=false;
                break;
            }
            if (i==0 && store[i]==0 && store[i+1]!=0){
                break;
            }
            if (store[i]==0){
                flag=false;
                break;
            }
        }
        if (flag){
            cout<<op<<endl;
        }
        else{
            cout<<-1<<endl;
        }

        //T.C:- O(n*30);
        //S.C.:-O(n);
    }
    return 0;
}
