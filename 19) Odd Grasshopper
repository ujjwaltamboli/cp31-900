#include <iostream>
using namespace std;
int main()
{
    int t;
    cin >> t;
    while (t--)
    {
        long long int x0, n;
        cin >> x0 >> n;
        long long int dist = 0;
        if (n % 4 == 0)
        {
            dist = 0;
        }
        else if (n % 4 == 2)
        {
            dist = 1;
        }
        else if (n % 4 == 3)
        {
            dist = 1 + n;
        }
        else
        {
            dist = -n;
        }

        if (x0%2==0){
            cout<<x0+dist<<endl;
        }
        else{
            cout<<x0-dist<<endl;
        }

        //T.C.:- O(1);
        //S.C.:- O(1);
    }

    return 0;
}
